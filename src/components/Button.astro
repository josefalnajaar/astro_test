---
const {variant, size} = Astro.props;
---

<button class={variant + " " + size}>
    <slot />
</button>

<style>
    button {
        padding: 2rem;
        border-radius: 20px;
    }
    .primary {
        background-color: green;
        color: white;
    }
    .secondary {
        background-color: white;
        color: green;
    }
.small {
    font-size: 1rem;
}
.medium {
    font-size: 2rem;
}
.large {
    font-size: 3rem;
}
</style>